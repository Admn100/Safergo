# Database
DATABASE_URL="postgresql://safargo:safargo@localhost:5432/safargo_dev"
DATABASE_URL_TEST="postgresql://safargo:safargo@localhost:5432/safargo_test"

# JWT & Security
JWT_SECRET="your-super-secret-jwt-key-min-64-chars-long-for-production-use"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-min-64-chars-long-for-production"
BCRYPT_ROUNDS=12

# API Configuration
API_PORT=3001
API_HOST="localhost"
NODE_ENV="development"

# Web App
NEXT_PUBLIC_API_URL="http://localhost:3001"
NEXT_PUBLIC_WEB_URL="http://localhost:3000"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-for-web-sessions"

# Storage (S3 Compatible)
STORAGE_ENDPOINT="https://s3.amazonaws.com"
STORAGE_REGION="eu-west-1"
STORAGE_BUCKET="safargo-dev"
STORAGE_ACCESS_KEY="your-s3-access-key"
STORAGE_SECRET_KEY="your-s3-secret-key"

# Payment Provider (Stripe Sandbox)
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Email Service (SendGrid/Mailgun)
EMAIL_PROVIDER="sendgrid"
EMAIL_API_KEY="your-email-api-key"
EMAIL_FROM="noreply@safargo.com"
EMAIL_FROM_NAME="SafarGo"

# SMS Service (Twilio/Local Provider)
SMS_PROVIDER="twilio"
SMS_ACCOUNT_SID="your-twilio-account-sid"
SMS_AUTH_TOKEN="your-twilio-auth-token"
SMS_FROM="+1234567890"

# Maps & Geolocation
MAPBOX_ACCESS_TOKEN="pk.eyJ1..."
GOOGLE_MAPS_API_KEY="AIza..."

# Push Notifications
FCM_SERVER_KEY="your-fcm-server-key"
FCM_PROJECT_ID="safargo-app"
APNS_KEY_ID="your-apns-key-id"
APNS_TEAM_ID="your-apns-team-id"

# Monitoring & Observability
SENTRY_DSN="https://...@sentry.io/..."
SENTRY_ORG="safargo"
SENTRY_PROJECT="safargo-api"

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT="http://localhost:4317"
OTEL_SERVICE_NAME="safargo-api"
OTEL_RESOURCE_ATTRIBUTES="service.version=1.0.0"

# Redis (for caching and sessions)
REDIS_URL="redis://localhost:6379"

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp,application/pdf"

# KYC & Document Verification
KYC_ENABLED=true
KYC_AUTO_APPROVE=false

# Localization
DEFAULT_LOCALE="fr"
SUPPORTED_LOCALES="fr,ar"

# Admin Panel
ADMIN_EMAIL="admin@safargo.com"
ADMIN_PASSWORD="change-me-in-production"

# Development Tools
LOG_LEVEL="debug"
SWAGGER_ENABLED=true
CORS_ORIGINS="http://localhost:3000,http://localhost:19006"

# Mobile App (Expo)
EXPO_PROJECT_ID="your-expo-project-id"
EAS_PROJECT_ID="your-eas-project-id"

# Backup & Maintenance
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
MAINTENANCE_MODE=false